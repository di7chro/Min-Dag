<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <RadioGroup
            android:id="@+id/settingsRadioTwitter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/settingsTwitterOfficial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingTwitterOfficialText"
                android:checked="true"/>

        <RadioButton
                android:id="@+id/settingsTwitterTaggat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingTwitterTaggatText"/>
        <!--
       <RadioButton
               android:id="@+id/settingTwitterEget"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/settingTwitterEgetText"/>
       <EditText
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:id="@+id/settingsTwitterEgenText"
               android:hint="@string/settingsMailEgenHint"/>
       -->
    </RadioGroup>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingTwitterOKButtonText"
            android:id="@+id/settingTwitterOKButton"/>

</LinearLayout>